            <DataTemplate DataType="{x:Type model:HeaderImage}">
                <Grid>
                    <Grid.Resources>
                        <Style BasedOn="{StaticResource TextBlockDefault}"
                               TargetType="{x:Type TextBlock}">
                            <Setter Property="Margin" Value="{StaticResource Margin}" />
                        </Style>
                        <Style BasedOn="{StaticResource TextBoxDefault}"
                               TargetType="{x:Type TextBox}">
                            <Setter Property="Margin" Value="{StaticResource Margin}" />
                        </Style>
                        <Style BasedOn="{StaticResource ComboBoxDefault}"
                               TargetType="{x:Type ComboBox}">
                            <Setter Property="Margin" Value="{StaticResource Margin}" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{StaticResource GridColumn_1_Width}" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Show Image" />
                    <ComboBox xmlns:system="clr-namespace:System;assembly=mscorlib"
                              Grid.Row="0"
                              Grid.Column="1"
                              SelectedValue="{Binding ShowImage, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.Resources>
                            <Style BasedOn="{StaticResource TextBlockDefault}"
                                   TargetType="{x:Type TextBlock}" />
                        </ComboBox.Resources>
                        <system:Boolean>true</system:Boolean>
                        <system:Boolean>false</system:Boolean>
                    </ComboBox>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Show Fade" />
                    <ComboBox xmlns:system="clr-namespace:System;assembly=mscorlib"
                              Grid.Row="1"
                              Grid.Column="1"
                              SelectedValue="{Binding ShowFade, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.Resources>
                            <Style BasedOn="{StaticResource TextBlockDefault}"
                                   TargetType="{x:Type TextBlock}" />
                        </ComboBox.Resources>
                        <system:Boolean>true</system:Boolean>
                        <system:Boolean>false</system:Boolean>
                    </ComboBox>
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Height" />
                </Grid>
            </DataTemplate>
            <DataTemplate DataType="{x:Type model:Image}" />


        </ResourceDictionary>
    </UserControl.Resources>

